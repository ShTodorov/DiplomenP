@page "/shopping_cart"

<PageTitle>Shopping cart</PageTitle>

<style>
    span{
        font-weight: normal;
    }
</style>

<style type="text/css" media="screen and (max-width:575px)">

    .px-4 {
        width: 100% !important;
        padding: 0 !important;
    }

</style>

<style type="text/css" media="screen and (max-width:519px)">

    .col-lg-12 {
        padding: 0 !important;
    }
        
</style>

<style type="text/css" media="screen and (max-width:425px)">

    .price {
        display: none;
    }

</style>

    <div class="px-4 px-lg-0">

        <div class="pb-5 mt-2">
          <div class="container">

            <div class="row">
              <div class="col-lg-12 p-5 bg-white rounded shadow-sm mb-5">
      
                <!-- Shopping cart table -->
                <div class="table-responsive">
                  <table class="table">
                    <thead>
                      <tr>
                        <th scope="col" class="border-0 bg-light">
                          <div class="p-2 px-3 text-uppercase">Product</div>
                        </th>
                        <th scope="col" class="border-0 bg-light price">
                          <div class="py-2 text-uppercase">Price</div>
                        </th>
                        <th scope="col" class="border-0 bg-light">
                          <div class="py-2 text-uppercase">Quantity</div>
                        </th>
                        <th scope="col" class="border-0 bg-light">
                          <div class="py-2 text-uppercase">Remove</div>
                        </th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <th scope="row" class="border-0">
                          <div class="p-2">
                            <img src="https://bootstrapious.com/i/snippets/sn-cart/product-1.jpg" alt="" width="70" class="img-fluid rounded shadow-sm">
                            <div class="ml-3 d-inline-block align-middle">
                              <h5 class="mb-0"> <a href="#" class="text-dark d-inline-block align-middle">Timex Unisex Originals</a></h5>
                                                <span class="text-muted d-block"><em>Категория: Watches</em></span>
                            </div>
                          </div>
                        </th>
                        <td class="border-0 align-middle price"><strong>$79.00</strong></td>
                        <td class="border-0 ">
                          <button type="button" style="width: 20px; margin-left: 13px;" @onclick="Increment" class="btn btn-light p-1">+</button>
                          <input class="form-control text-center" type="num" @bind-value="@count"  style="width: 3rem;">
                          <button type="button" style="width: 20px; margin-left: 13px;" @onclick="Decrement" class="btn btn-light p-1">-</button>
                        </td>
                        <td class="border-0 align-middle"><button class="btn btn-outline-danger flex-shrink-0" type="button">–</button></td>
                      </tr>

                                <tr>
                                    <th scope="row" class="border-0">
                                        <div class="p-2">
                                            <img src="https://bootstrapious.com/i/snippets/sn-cart/product-1.jpg" alt="" width="70" class="img-fluid rounded shadow-sm">
                                            <div class="ml-3 d-inline-block align-middle">
                                                <h5 class="mb-0"> <a href="#" class="text-dark d-inline-block align-middle">Timex Unisex Originals</a></h5>
                                                <span class="text-muted d-block"><em>Категория: Watches</em></span>
                                            </div>
                                        </div>
                                    </th>
                                    <td class="border-0 align-middle price"><strong>$79.00</strong></td>
                                    <td class="border-0 ">
                                        <button type="button" style="width: 20px; margin-left: 13px;" @onclick="Increment" class="btn btn-light p-1">+</button>
                                        <input class="form-control text-center" type="num" value="@Count" style="width: 3rem;">
                                        <button type="button" style="width: 20px; margin-left: 13px;" @onclick="Decrement" class="btn btn-light p-1">-</button>
                                    </td>
                                    <td class="border-0 align-middle"><button class="btn btn-outline-danger flex-shrink-0" type="button">–</button></td>
                                </tr>

                    </tbody>
                  </table>
                </div>
                <!-- End -->
              </div>
            </div>
      
            <div class="row py-5 p-4 bg-white rounded shadow-sm">
              <div class="col-lg-6">
                <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">Инструкции към поръчката</div>
                <div class="p-4">
                        <p class="mb-2"><em>Адрес на поръчката:</em></p>
                  <input type="text" class="mb-3 form-control">
                        <p class="mb-2"><em>Телефон на получател:</em></p>
                  <input type="text" class="mb-3 form-control">
                        <p class="mb-2"><em>Ако искате да дадете пояснение към поръчката си, може да го напишето в полето отдолу:</em></p>
                  <textarea name="" cols="30" rows="2" class="form-control"></textarea>
                </div>
              </div>
              <div class="col-lg-6">
                <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">Вашата поръчка</div>
                <div class="p-4">
                        <p class="mb-4"><em>Доставката се изчислява спрямо цената на поръчката.</em></p>
                  <ul class="list-unstyled mb-4">
                    <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Цена на поръчката</strong><strong>$390.00</strong></li>
                    <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Доставка</strong><strong>$10.00</strong></li>
                    <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Общо</strong>
                      <h5 class="font-weight-bold">$400.00</h5>
                    </li>
                  </ul><a href="#" class="btn btn-dark rounded-pill py-2 btn-block">Поръчване</a>
                </div>
              </div>
            </div>

            <p class="mt-3 text-center text-secondary"><b>Ако искате да видите история на покупките си, натиснете <a href="cart_history">тук</a>.</b></p>
      
          </div>
        </div>
      </div>

@code{
    private int count { get; set; }

    public int Count
    {
        get { return count; }
        set { count = value; }
    }

    private void Increment()
    {
        Count++;
    }

    private void Decrement()
    {
        if (Count > 0)
        {
            Count--;
        }
    }
}
